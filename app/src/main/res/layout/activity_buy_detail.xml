<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MyApplication.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.MyApplication.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/buy_num"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/buy_min_price"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/input_num"
        app:layout_constraintLeft_toLeftOf="@id/input_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/buy_unit_price"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="160dp"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/min_price"
        app:layout_constraintLeft_toLeftOf="@id/min_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/receive_code_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="200dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/buy_unit_price"
        app:layout_constraintLeft_toLeftOf="@id/buy_unit_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.btc.application.util.CustomBtn
        android:id="@+id/cbt_buy"
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:layout_marginTop="520dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/buynow"
        android:text="@string/cfm_buy"
        android:textColorHint="@color/white"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/receive_code_image"
        app:layout_constraintLeft_toLeftOf="@id/receive_code_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>